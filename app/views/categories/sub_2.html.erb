<div class="container">

	<div class"row">
		<div class="col-md-2" id="main_category">
				<h3><%= @parent_category.main_category + " > " %></h3>
		</div>
	</div>

	<div class"row">
		<div class="col-md-2" id="sub_category1">
				<h3><%= @parent_category.sub_category1 + " > " %></h3>
		</div>
	</div>		

		<div class"row">
			<div class="col-md-3" >
				<% @sub_categories.each do |s| %>
					<% if s.children == 0 %>
						<h5><%= link_to s.sub_category2, last_path(s, @product) %></h5> 
					<% else %>
						<h5><%= link_to s.sub_category2 + " > ", sub_3_path(s, @product) %></h5>
					<% end %>
				<% end %>	
			</div>
		</div>

</div>