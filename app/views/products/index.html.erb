<div class="container">

    <p id="notice"><%= notice %></p>

    <h1>Listing Products</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>          
          <th>Purchase Date</th>
          <th>Purchase Source</th>
          <th>Purchase Price</th>
          <th>Store Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td id="title"><%= product.title %></td>            
            <td><%= product.formatted_purchase_date %></td>
            <td><%= product.purchase_source %></td>
            <td><%= number_to_currency(product.purchase_price) %></td>
            <td><%= product.store_category %></td>
            <td><%= link_to 'Show |', product  %></td>
            <td><%= link_to 'Edit |', edit_product_path(product) %></td>
            <td><%= link_to 'List Now', new_listing_path(product), class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Product', new_product_path %>
  
</div>
