<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @product.title %>
      </p>

      <p>
        <strong>Description:</strong><br> 
        <%= @product.description %>
      </p>
      

      <p>
        <strong>Purchase date:</strong>
        <%= @product.formatted_purchase_date %>
      </p>

      <p>
        <strong>Purchase source:</strong>
        <%= @product.purchase_source %>
      </p>

      <p>
        <strong>Purchase price:</strong>
        <%= number_to_currency(@product.purchase_price) %>
      </p>

      <p>
        <strong>Store Category:</strong>
        <%= @product.store_category %>
      </p>

      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %><br>
      <%= link_to 'List Item Now', new_listing_path(@product), class: "btn btn-primary" %>
    </div>
  </div>
</div>


